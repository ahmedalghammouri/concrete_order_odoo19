<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_excel_field_mapping_tree" model="ir.ui.view">
        <field name="name">excel.field.mapping.tree</field>
        <field name="model">excel.field.mapping</field>
        <field name="arch" type="xml">
            <list string="Field Mappings">
                <field name="template_id"/>
                <field name="field_name"/>
                <field name="cell_location"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_excel_field_mapping_form" model="ir.ui.view">
        <field name="name">excel.field.mapping.form</field>
        <field name="model">excel.field.mapping</field>
        <field name="arch" type="xml">
            <form string="Field Mapping">
                <sheet>
                    <group>
                        <field name="template_id"/>
                        <field name="field_name"/>
                        <field name="cell_location"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_excel_field_mapping" model="ir.actions.act_window">
        <field name="name">Field Mappings</field>
        <field name="res_model">excel.field.mapping</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
