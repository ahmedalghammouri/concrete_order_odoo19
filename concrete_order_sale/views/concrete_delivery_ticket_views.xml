<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="concrete_delivery_ticket_view_form_sale" model="ir.ui.view">
        <field name="name">concrete.delivery.ticket.view.form.sale</field>
        <field name="model">concrete.delivery.ticket</field>
        <field name="inherit_id" ref="concrete_order.view_concrete_delivery_ticket_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='stock_integration']" position="after">
                <page string="Sale Order" name="sale_order">
                    <group>
                        <group>
                            <field name="sale_order_id" domain="[('partner_id', '=', customer_id), ('state', 'in', ['sale', 'done'])]"/>
                            <field name="sale_line_id" domain="[('order_id', '=', sale_order_id)]"/>
                        </group>
                    </group>
                </page>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_sale_order" type="object" class="oe_stat_button" icon="fa-shopping-cart" invisible="not sale_order_id">
                    <div class="o_stat_info">
                        <span class="o_stat_text">Sale Order</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <record id="concrete_delivery_ticket_view_list_sale" model="ir.ui.view">
        <field name="name">concrete.delivery.ticket.view.list.sale</field>
        <field name="model">concrete.delivery.ticket</field>
        <field name="inherit_id" ref="concrete_order.view_concrete_delivery_ticket_list"/>
        <field name="arch" type="xml">
            <field name="customer_id" position="after">
                <field name="sale_order_id" optional="show"/>
                <field name="sale_line_id" optional="hide"/>
            </field>
        </field>
    </record>

    <record id="concrete_delivery_ticket_view_search_sale" model="ir.ui.view">
        <field name="name">concrete.delivery.ticket.view.search.sale</field>
        <field name="model">concrete.delivery.ticket</field>
        <field name="inherit_id" ref="concrete_order.view_concrete_delivery_ticket_search"/>
        <field name="arch" type="xml">
            <field name="customer_id" position="after">
                <field name="sale_order_id"/>
            </field>
            <filter name="delivered" position="after">
                <separator/>
                <filter string="With Sale Order" name="with_sale" domain="[('sale_order_id', '!=', False)]"/>
            </filter>
        </field>
    </record>
</odoo>
