<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_concrete_zpl_printer_form" model="ir.ui.view">
        <field name="name">concrete.zpl.printer.form</field>
        <field name="model">concrete.zpl.printer</field>
        <field name="arch" type="xml">
            <form string="ZPL Printer">
                <header>
                    <button name="action_test_connection" string="Test Connection" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Disabled" bg_color="text-bg-danger" invisible="is_enabled"/>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="connection_type"/>
                            <field name="ip_address" invisible="connection_type != 'network'"/>
                            <field name="port" invisible="connection_type != 'network'"/>
                            <field name="usb_device" invisible="connection_type != 'usb'"/>
                        </group>
                        <group>
                            <field name="is_enabled"/>
                            <field name="is_default"/>
                            <field name="connection_status"/>
                            <field name="last_check_date"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <group string="Printer Settings">
                        <group>
                            <field name="dpi"/>
                            <field name="print_speed"/>
                            <field name="darkness"/>
                        </group>
                        <group>
                            <field name="label_width"/>
                            <field name="label_height"/>
                        </group>
                    </group>
                    <group string="Auto-print">
                        <field name="auto_print_ticket"/>
                    </group>
                    <group string="Notes">
                        <field name="notes" nolabel="1"/>
                    </group>
                    <group string="Error" invisible="not error_message">
                        <field name="error_message" nolabel="1"/>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_concrete_zpl_printer_tree" model="ir.ui.view">
        <field name="name">concrete.zpl.printer.tree</field>
        <field name="model">concrete.zpl.printer</field>
        <field name="arch" type="xml">
            <list string="ZPL Printers">
                <field name="name"/>
                <field name="is_default" widget="boolean_toggle"/>
                <field name="connection_type"/>
                <field name="ip_address"/>
                <field name="connection_status"/>
                <field name="is_enabled"/>
                <field name="print_count"/>
            </list>
        </field>
    </record>

    <record id="action_concrete_zpl_printer" model="ir.actions.act_window">
        <field name="name">ZPL Printers</field>
        <field name="res_model">concrete.zpl.printer</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_concrete_zpl_printer"
              name="ZPL Printers"
              parent="concrete_order.menu_concrete_configuration"
              action="action_concrete_zpl_printer"
              sequence="50"/>
</odoo>
