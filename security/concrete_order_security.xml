<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="module_category_concrete_order" model="ir.module.category">
        <field name="name">Concrete Order</field>
        <field name="description">Manage concrete delivery operations</field>
        <field name="sequence">10</field>
    </record>

    <record id="group_concrete_user" model="res.groups">
        <field name="name">Concrete Order / User</field>
        <field name="comment">Can create and manage delivery tickets</field>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_concrete_manager" model="res.groups">
        <field name="name">Concrete Order / Manager</field>
        <field name="comment">Full access to concrete order configuration and records</field>
        <field name="implied_ids" eval="[(4, ref('group_concrete_user'))]"/>
    </record>

    <record id="concrete_delivery_ticket_rule_user" model="ir.rule">
        <field name="name">Concrete Ticket: User</field>
        <field name="model_id" ref="model_concrete_delivery_ticket"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_concrete_user'))]"/>
    </record>

    <record id="concrete_delivery_ticket_rule_manager" model="ir.rule">
        <field name="name">Concrete Ticket: Manager</field>
        <field name="model_id" ref="model_concrete_delivery_ticket"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_concrete_manager'))]"/>
    </record>

    <record id="concrete_vehicle_rule_user" model="ir.rule">
        <field name="name">Concrete Vehicle: User</field>
        <field name="model_id" ref="model_concrete_vehicle"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_concrete_user'))]"/>
    </record>

    <record id="concrete_driver_rule_user" model="ir.rule">
        <field name="name">Concrete Driver: User</field>
        <field name="model_id" ref="model_concrete_driver"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_concrete_user'))]"/>
    </record>
</odoo>
